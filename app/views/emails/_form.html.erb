<br><br>
<div class="container">
	<div class="row">
		<div class="col-sm-6 col-xs-12">
			<%=form_for( @email , :html => {:multipart=>true , :role=>"form", :id=>"mail_form" , :class=>"form-horizontal"} ) do |f| %>
				<legend>Simple Mail Form</legend>
				<div class="form-group">
					<%=f.label :to , :class=>"col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%=f.text_field :to , :class=>"form-control" , :placeholder => "Recipient address " %>
					</div>
				</div>

				<div class="form-group">
					<%=f.label :subject , :class=>"col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%=f.text_field :subject , :class=>"form-control" , :placeholder => "Subject" %>
					</div>
				</div>

				<div class="form-group">
					<%=f.label :body , :class=>"col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%=f.text_area :body , :class=>"form-control" , :placeholder => "Body Text" %>
					</div>
				</div>

				<div class="form-group">
					<%=f.label :attach , :class=>"col-sm-4 control-label" %>
					<div class="col-sm-8">
						<%= f.file_field :attachment , name: "attachment" %>
					</div>
				</div>

				<%=f.hidden_field :draft_flag %>

				<div class="form-group">
					<div class="col-sm-offset-4 col-sm-8">
						<%= link_to "Send","#", :id=>"btn-send", :class=>"btn btn-success btn-sm"%>
						<%= link_to "Save as Draft","#", :id=>"btn-save-draft",:class=>"btn btn-info btn-sm"%>
					</div>
				</div>

			<% end %>

		</div>
	</div>
</div>
